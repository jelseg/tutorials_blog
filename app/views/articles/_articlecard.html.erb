<div class="col-sm-6 mx-auto mb-3 shadow"> <!-- col-... -> width, mx-auto -> centered on page, mb -> whiteborder/ space between cards -->
    <div class="card text-center">
      <div class="card-header">
        <%= article.id %>
      </div>

      <div class="card-body">
        <h5 class="card-title"><%=  %> <%= link_to article.title, article, class: "normal-text" %> </h5>
        <p class="card-text"> <%= truncate(article.description, length:50) %> </p>

        <%= link_to 'Show', article, class: "btn btn-primary" %></td>
        <% if logged_in? && (article.user == current_user || current_user.admin?) %>
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-success" %>
          <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        <% end %>
      </div>

      <div class="card-footer text-muted">
        created <%= distance_of_time_in_words(article.created_at, Time.now) %>
        <% if article.created_at != article.updated_at then %>
         <br>
          edited <%= distance_of_time_in_words(article.updated_at, Time.now) %>
        <% end %>
      </div>
    </div>
</div>