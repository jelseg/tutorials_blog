<h1 class="text-center"> login </h1>

<%= form_with(scope: :session, url: login_path) do |form| %>  <!--- will also give us a form class in html --->

    <div class="p-5 my-5 rounded-3 col-sm-8 mx-auto text-center shadow" id="form-box">
    <div class="container-fluid py-5">
  
      <div class="form-group row">
        <div class="col-2">
          <%= form.label :email, class: "col-form-label" %>
        </div>
        <div class="col-8">
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "email@example.com" %>
        </div>
      </div>
  
      <br>
  
      <div class="form-group row">
        <div class="col-2">
          <%= form.label :password, class: "col-form-label" %>    <!--- altough data field in database is called differently, we can refer to it using the virtual atribute password -->
        </div>
        <div class="col-8">
          <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "pasword123&" %>
        </div>
      </div>
  
      <br>
  
      <div class="actions form-group row col-8 mx-auto">
        <%= form.submit("login", class: "btn btn-outline-light btn-lg") %>
      </div>
  
    </div>
    </div>
  
  
    
  <% end %>