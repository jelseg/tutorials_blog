<div class="col-sm-6 mx-auto mb-3 shadow"> <!-- col-... -> width, mx-auto -> centered on page, mb -> whiteborder/ space between cards -->
    <div class="card text-center">
      <div class="card-header">

      </div>

      <div class="card-body">
        <h5 class="card-title"><%=  %> <%= link_to category.name, category, class: "normal-text" %> </h5>
      </div>

      <div class="card-footer text-muted">
        <%= pluralize(category.articles.count,"article") %>
      </div>
    </div>
</div>