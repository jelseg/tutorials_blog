<%= render 'commen_elements/errorflash', obj: @category %>

<%= form_with(model: @category) do |form| %>  <!--- will also give us a form class in html --->

  <div class="p-5 my-5 rounded-3 col-sm-8 mx-auto text-center shadow" id="form-box">
  <div class="container-fluid py-5">

    <div class="form-group row">
      <div class="col-2">
        <%= form.label :name, "Category name", class: "col-form-label" %>
      </div>
      <div class="col-8">
        <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "Category name" %>
      </div>
    </div>

    <br>

    <div class="actions form-group row col-8 mx-auto">
      <%= form.submit class: "btn btn-outline-light btn-lg" %>
    </div>

  </div>
  </div>


  
<% end %>
